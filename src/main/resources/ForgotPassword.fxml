<Pane fx:id="forgotPasswordPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ForgotPassword">
    <children>
        <VBox layoutX="451.0" layoutY="17.0" prefHeight="350.0" prefWidth="561.0" style="-fx-background-color: #FDFDFD; -fx-background-radius: 25; -fx-alignment: CENTER;">
            <children>
                <Label text="Password Recovery">
                    <font>
                        <Font size="31.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <VBox prefHeight="76.0" prefWidth="462.0">
                    <Text style="-fx-padding: 30;" text="Enter your email address to receive a code">
                        <VBox.margin>
                            <Insets left="20.0" />
                        </VBox.margin>
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Text>
                    <TextField fx:id="emailField" prefHeight="43.0" prefWidth="519.0" promptText="Enter your email address" style="-fx-border-radius: 20; -fx-background-color: #E4E4E4; -fx-font-family: Serif; -fx-alignment: center; -fx-font-size: 23; -fx-prompt-text-fill: derive(-fx-control-inner-background, -30%); -fx-text-fill: #666666;">
                        <VBox.margin>
                            <Insets bottom="15.0" left="20.0" top="15.0" />
                        </VBox.margin>
                        <font>
                            <Font name="System Font" size="24.0" />
                        </font>
                        <cursor>
                            <Cursor fx:constant="TEXT" />
                        </cursor>
                    </TextField>
                </VBox>

                <Button text="Send Code" onMouseClicked="#generateVerificationCode" prefHeight="43.0" prefWidth="519.0" style="-fx-border-radius: 20; -fx-background-color: #80B3FF; -fx-font-family: Serif; -fx-font-size: 20;" textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="15.0" left="20.0" top="-11.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</Pane>